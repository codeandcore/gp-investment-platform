{
  "version": 2,
  "builds": [
    { "src": "frontend/next.config.ts", "use": "@vercel/next" },
    { "src": "backend/api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/index.js" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": ""
  }
}
